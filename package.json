  "devDependencies": {
    "@edge-runtime/vm": "^4.0.4",
    "@types/node": "^25.2.1",
    "convex": "^1.17.0",
    "convex-test": "^0.0.34",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "dependencies": {
    "convex-helpers": "^0.1.112"
  }
}
